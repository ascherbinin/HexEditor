<UserControl x:Class="HexEditor.HexGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600" Width="500">
    <Grid>
        <DockPanel Width="500">
            <DataGrid x:Name="grid" AutoGenerateColumns="True" GridLinesVisibility="Vertical" CanUserSortColumns="False" MaxColumnWidth="100" BorderBrush="{x:Null}" CanUserResizeColumns="False" CanUserReorderColumns="False" BorderThickness="0" Width="500" KeyDown="grid_KeyDown" />
        </DockPanel>
    </Grid>
</UserControl>
